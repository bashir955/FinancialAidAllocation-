<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="16dp">

    <!-- Name Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Name Value -->
    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- ARID No Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arid No:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- ARID No Value -->
    <TextView
        android:id="@+id/detail_arid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Father Name Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Name:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Father Name Value -->
    <TextView
        android:id="@+id/fathername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <!-- Father Status Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Status:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Father Status Value -->
    <TextView
        android:id="@+id/fatherstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Semester Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Semester Value -->
    <TextView
        android:id="@+id/Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- CGPA Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- CGPA Value -->
    <TextView
        android:id="@+id/Cgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Reason Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Reason Value -->
    <TextView
        android:id="@+id/reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Required Amount Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Amount:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Required Amount Value -->
    <TextView
        android:id="@+id/req_amunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Comment Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Comment Value -->
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Status:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Application Status Value -->
    <TextView
        android:id="@+id/appli_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- RecyclerView for images -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewforimages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent" />
</LinearLayout>
